<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">
            <% if (mode==="Create" ) { %>
                Tạo loại sản phẩm mới
                <% } else if (mode==="Update" ) { %>
                    Cập nhật loại sản phẩm
                    <% } else if (mode==="Delete" ) { %>
                        Bạn có đồng ý xóa sản phẩm <%= category?.name %>
                            <% } %>
        </h4>
        <div class="card">
            <div class="card-body">
                <% if (mode==="Create" ) { %>
                    <form action="/categories/create" method="post">
                        <% } %>
                            <% if (mode==="Update" ) { %>
                                <form action="/categories/update" method="post">
                                    <div class="form-group" style="display: none;">
                                        <input name="id" type="text" class="form-control" id="id"
                                            value="<%= category?._id %>">
                                    </div>
                                    <% } %>
                                        <% if (mode==="Delete" ) { %>
                                            <form action="/categories/delete" method="post">
                                                <div class="form-group" style="display: none;">
                                                    <input name="id" type="text" class="form-control" id="id"
                                                        value="<%= category?._id %>">
                                                </div>
                                                <% } %>
                                                    <div class="form-group">
                                                        <label for="code">Nhập mã sản phẩm</label>
                                                        <input name="code" type="text"
                                                            class="form-control categoryInput" id="code"
                                                            value="<%= category?.code %>"
                                                            placeholder="Nhập mã sản phẩm">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="name">Nhập tên sản phẩm</label>
                                                        <input name="name" type="text"
                                                            class="form-control categoryInput" id="name"
                                                            value="<%= category?.name %>"
                                                            placeholder="Nhập tên sản phẩm">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="searchString">Chuỗi tìm kiếm</label>
                                                        <input name="searchString" type="text"
                                                            class="form-control categoryInput" id="searchString"
                                                            value="<%= category?.searchString %>"
                                                            placeholder="Nhập tên chuỗi tìm kiếm">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="image">Link hình ảnh sản phẩm</label>
                                                        <input name="image" type="text"
                                                            class="form-control categoryInput" id="image"
                                                            value="<%= category?.image %>"
                                                            placeholder="Nhập link ảnh sản phẩm">
                                                    </div>
                                                    <div class="card-action">
                                                        <button
                                                            class="btn <%= mode === 'Delete' ? 'btn-danger' : 'btn-success' %>"
                                                            type="submit">
                                                            <%= mode==="Create" ? "Tạo" : mode==="Update" ? "Sửa"
                                                                : "Xóa" %>
                                                        </button>
                                                        <a href="/categories" class="btn btn-primary">Trở về trang
                                                            chủ</a>
                                                    </div>
                                            </form>
            </div>
        </div>
    </div>
</div>